@model IEnumerable<ZorroASP.Models.Run>

@{
    ViewBag.Title = "My Trail Runs";
}

<h2>Trail Runs</h2>

<div style="display: block">
    <a href="/Run/LogRun/" class="btn btn-primary">Log Run</a>
</div>

<div class="container mt-4">
    <h2>Your Past Runs</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Distance</th>
            <th>Elevation Gain</th>
            <th>Heart Rate</th>
            <th>Run Type</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
            @foreach (var run in Model)
            {
                <tr>
                <td><a href=/Run/ViewRun/@run.Id>@run.Id</a></td>
                    <td>@run.Date.ToShortDateString()</td>
                    <td>@run.Distance mi</td>
                    <td>@run.ElevationGain ft</td>
                    <td>@run.HeartRate bpm</td>
                    <td>@run.RunType</td>
                    <td>@run.Location</td>
                    <td>
                        @Html.ActionLink("Edit", "UpdateRun", new { id = run.Id }, new { @class = "btn btn-secondary btn-sm ms-2", onclick = "return confirm('Are you sure you want to edit this run?');"}) |
                        @Html.ActionLink("Delete", "DeleteRun", new { id = run.Id }, new { @class = "btn btn-danger btn-sm ms-2", onclick = "return confirm('Are you sure you want to delete this run?');"})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>