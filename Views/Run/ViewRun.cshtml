@model Run

<h3>@Model.Date Information</h3>

<table class="table">
    <tr>
        <th>User ID</th>
        <th>Type ID</th>
        <th>Date</th>
        <th>Location</th>
        <th>Mileage</th>
        <th>Elevation</th>
        <th>Heart Rate</th>
    </tr>
    <tr>
        <td>@Model.UserID</td>
        <td>@Model.TypeID</td>
        <td>@Model.Date</td>
        <td>@Model.Location</td>
        <td>@Model.Mileage</td>
        <td>@Model.Elevation</td>
        <td>@Model.HeartRate</td>
    </tr>
</table>

<div style="display: block">
    <a href="/Run/UpdateRun/@Model.ID">Edit Run</a>
</div>

<div style="display: block">

    @using (Html.BeginForm("DeleteRun", "Run", "Post"))
    {
        <input type="hidden" asp-for="ID" value="@Model.ID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this product" />
    }
</div>