<!DOCTYPE html>
<html lang="en">
<head>
    
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ZorroASP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="/ZorroASP.styles.css" asp-append-version="true"/>

</head>
<body class="d-flex flex-column min-vh-100">
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand"><img id="nav-img" src="@Url.Content("~/imgs/Untitled design.png")" alt="Zorro Logo"/></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Run/LogRun">Log Run</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Run">View Runs</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/#features-section">Learn More</a>
                </li>
            </ul>
        </div>
    </nav>
    
    <main role="main" class="flex-grow-1 pb-3">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container bg-dark text-center">
            <p>&copy; 2024 Zorro. All rights reserved.</p>
            <ul class="list-inline">
                <li class="list-inline-item"><a href="/Privacy.cshtml" class="text-white">About Us</a></li>
                <li class="list-inline-item"><a href="/Privacy.cshtml" class="text-white">Privacy Policy</a></li>
                <li class="list-inline-item"><a href="/Privacy.cshtml" class="text-white">Contact Us</a></li>
            </ul>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous" async=""></script>
    <script src="~/lib/jquery/dist/jquery.min.js" async=""></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" async=""></script>
    <script src="~/js/site.js" asp-append-version="true" async=""></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>